MODULE Rcar(ultrasonic_signal,around_signal,I2C_input,can_in,simulate)
	VAR
		ultrasonic:comp_ultrasonic(ultrasonic_signal);
		--around detect algorithm
		around:comp_around(around_signal,simulate);
		stop:comp_stop(ultrasonic.out,can_in,plan.flag[1]);
		plan:comp_action(ultrasonic.out,around.out,I2C_input,can_in);

		--I2C_input=eye_signal

		cmd_brake:{1,0};

	DEFINE
		can_out:=[cmd_angle[0],cmd_angle[1],cmd_speed,cmd_brake,cmd_gear];
		flag:=plan.flag;
		cmd_speed:=plan.Ve;
		--[3]
		cmd_angle:=plan.plan_point;
		cmd_gear:=flag[0];
	ASSIGN
		init(cmd_brake):=0;

		next(cmd_brake):=
		case
			(stop.isStop=2):1;
			TRUE:cmd_brake;
		esac;

