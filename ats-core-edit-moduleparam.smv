MODULE Ultrasonic(barrier,car_position)
	DEFINE
		out:=barrier;

MODULE AroundCamera(car_position,car_status)
	DEFINE
		x:=car_position[0];
		y:=car_position[1];
		around_port:=[[x+1,y],[x+1,y+1],[x,y+1],[x+(-1),y+1],[x+(-1),y],[x+(-1),y+(-1)],[x,y+(-1)],[x+1,y+(-1)]];
		position:=car_position;
		
MODULE DoubleEyeCamera(car_position,car_statu)
	VAR
		--front point
		x0:{0,1,2,3,4};
		y0:{0,1,2};
	DEFINE
		x:=car_position[0];
		y:=car_position[1];
		car_angle:=car_statu[1];
		out:=[x0,y0];
	ASSIGN
		init(x0):=x;
		init(y0):=y+1;

		next(x0):=
		case
			car_statu=0:x+1;
			car_statu=2:x;
			car_statu=4:x+(-1);
			car_statu=6:x;
			TRUE:x0;
		esac;

		next(y0):=
		case
			car_statu=0:y;
			car_statu=2:y+1;
			car_statu=4:y;
			car_statu=6:y+(-1);
			TRUE:y0;
		esac;


